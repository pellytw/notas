<h1>Listado de  Regiones</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @regiones.each do |region| %>
  <tr>
    <td><%= region.nombre %></td>
    <td><%= link_to 'Ver', region, :class => "btn btn-success btn-mini" %></td>
    <td><%= link_to 'Editar', edit_region_path(region), :class => "btn btn-info btn-mini" %></td> 
    <td><%= link_to 'Eliminar', region, method: :delete, data: { confirm: 'Seguro desea eliminar?' }, :class => "btn btn-danger btn-mini" %></td>
  </tr>
<% end %>
</table>

