<h2>Registrarse</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= render :partial => 'user_fields' , :locals => {:f => f} %>

  </br>

  <div><%= f.submit "Registrarse", :class => "btn-primary"  %></div>
<% end %>

